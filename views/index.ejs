<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Email Sender</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body class="container p-5">

    <a href="/"><button  class="btn btn-warning w-100 mb-5">Back to main page <i class="fa-solid fa-reply-all"></i></button></a>
    <h1 class="text-center text-danger">Email Sender <i class="fa-solid fa-envelope"></i></h1>

    <form action="/email/send-email" method="POST" class="">
        <label for="to" class="form-label">To:</label>
        <input type="email"  name="to" required class="form-control">

        <label for="subject" class="form-label">Subject:</label>
        <input type="text"  name="subject" required class="form-control">

        <label for="message" class="form-label">Message:</label>
        <textarea  name="message" required class="form-control"></textarea>

        <button type="submit" class="btn btn-primary my-3 w-100">Send Message <i class="fa-solid fa-paper-plane"></i></button>
    </form>
<hr>
<br>

    <h1 class="text-danger text-center">Comments <i class="fa-solid fa-comments"></i> </h1> <br>
    

    <div class="row">
      <div class="col">
        <% comments.forEach(comment => { %>
          <div class="bg-light p-2 my-2">
            <h5> 
              <img style="width: 45px; height: 45px; border-radius: 150px;" src="<%= comment.url %>" alt="">      <%= comment.name %>
              </h5>
        
            <p class="border p-2" style="border-radius: 6px;"><%= comment.comment %></p>
          </div>
        <% }); %>
      </div>
      <div class="col">
        <h2> <i class="fa-regular fa-hand-point-left"></i> Add a Comment</h2>
        
        <form action="/email" method="POST" class="border p-3" style="border-radius: 6px;">
          <label for="name" class="form-label">Name:</label>
          <input type="text" id="name" name="name" required class="form-control">

          <label for="url" class="form-label">Your photo url:</label>
          <input type="url" id="url" name="url" required class="form-control">
        
          <label for="comment" class="form-label">Comment:</label>
          <textarea id="comment" name="comment" rows="4" required class="form-control"></textarea>
        
          <button type="submit " class="btn btn-success mt-3 ">Add <i class="fa-solid fa-comment-medical"></i></button>
        </form>
        
      </div>
    </div>








    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js" integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"    crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>
</body>
</html>
